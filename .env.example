# üå± Smart Irrigation System - Configuration Environnement
# Copier vers .env et ajuster les valeurs

# =============================================================================
# üóÑÔ∏è BASE DE DONN√âES
# =============================================================================
DATABASE_URL=postgresql://irrigation_user:secure_password@postgres:5432/irrigation_db
DATABASE_TEST_URL=postgresql://irrigation_user:secure_password@postgres:5432/irrigation_test_db

# =============================================================================
# üîê AUTHENTIFICATION & S√âCURIT√â
# =============================================================================
SECRET_KEY=your-super-secret-jwt-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# üì° IoT & MQTT
# =============================================================================
MQTT_BROKER=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=irrigation_mqtt
MQTT_PASSWORD=mqtt_secure_password
MQTT_KEEPALIVE=60

# Topics MQTT
MQTT_TOPIC_PREFIX=irrigation
MQTT_TOPIC_SENSORS=sensors
MQTT_TOPIC_ACTUATORS=actuators
MQTT_TOPIC_STATUS=status

# =============================================================================
# üîÑ REDIS (Cache & Sessions)
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600
REDIS_SESSION_TTL=1800

# =============================================================================
# üñ•Ô∏è APPLICATION
# =============================================================================
# Environnement
ENVIRONMENT=development
DEBUG=true
TESTING=false

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_V1_PREFIX=/api/v1

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# üìä LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/irrigation.log

# =============================================================================
# üì° EXTERNE SERVICES
# =============================================================================
# API M√©t√©o (OpenWeatherMap)
WEATHER_API_KEY=your-openweather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=Smart Irrigation <noreply@irrigation.com>

# =============================================================================
# üê≥ DOCKER CONFIGURATION
# =============================================================================
# PostgreSQL
POSTGRES_DB=irrigation_db
POSTGRES_USER=irrigation_user
POSTGRES_PASSWORD=secure_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Mosquitto MQTT
MOSQUITTO_HOST=mosquitto
MOSQUITTO_PORT=1883

# =============================================================================
# üîß CONFIGURATION M√âTIER
# =============================================================================
# Irrigation
DEFAULT_IRRIGATION_DURATION=30  # minutes
MIN_IRRIGATION_INTERVAL=60      # minutes
MAX_IRRIGATION_DURATION=120     # minutes

# Alertes
ALERT_CHECK_INTERVAL=300        # secondes (5 min)
ALERT_COOLDOWN=1800            # secondes (30 min)

# Climat
OPTIMAL_VPD_MIN=0.8            # kPa
OPTIMAL_VPD_MAX=1.2            # kPa
CRITICAL_TEMP_MIN=10           # ¬∞C
CRITICAL_TEMP_MAX=35           # ¬∞C

# =============================================================================
# üìà MONITORING (Optionnel)
# =============================================================================
# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=false
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin_password

# =============================================================================
# üöÄ PRODUCTION OVERRIDES
# =============================================================================
# √Ä d√©commenter en production
# ENVIRONMENT=production
# DEBUG=false
# HTTPS_ONLY=true
# SECURE_COOKIES=true
# CORS_ORIGINS=https://yourdomain.com