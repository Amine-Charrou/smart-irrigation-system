# üå± Smart Irrigation System - Backend Dockerfile
# FastAPI backend optimis√© pour production

FROM python:3.11-slim as base

# M√©tadonn√©es
LABEL maintainer="Smart Irrigation Team"
LABEL description="Smart Irrigation System - FastAPI Backend"
LABEL version="2.0.0"

# Variables build
ARG BUILD_DATE
ARG VCS_REF
ARG VERSION=2.0.0

# Variables d'environnement
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# =============================================================================
# üí´ STAGE 1: D√âPENDANCES SYST√àME
# =============================================================================
FROM base as system-deps

# Installer d√©pendances syst√®me
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    libpq-dev \
    gcc \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# =============================================================================
# üêç STAGE 2: D√âPENDANCES PYTHON
# =============================================================================
FROM system-deps as python-deps

# Upgrade pip
RUN pip install --upgrade pip setuptools wheel

# Copier requirements
WORKDIR /tmp
COPY requirements.txt .

# Installer d√©pendances Python
RUN pip install --no-cache-dir -r requirements.txt

# =============================================================================
# üîê STAGE 3: UTILISATEUR & S√âCURIT√â
# =============================================================================
FROM python-deps as security

# Cr√©er utilisateur non-root
RUN groupadd -r irrigation && useradd -r -g irrigation irrigation

# Cr√©er r√©pertoires avec permissions
RUN mkdir -p /app /app/logs /app/uploads \
    && chown -R irrigation:irrigation /app

# =============================================================================
# üöÄ STAGE 4: APPLICATION
# =============================================================================
FROM security as application

# Passer √† l'utilisateur non-root
USER irrigation

# R√©pertoire de travail
WORKDIR /app

# Copier code application
COPY --chown=irrigation:irrigation . .

# Variables d'environnement finales
ENV PATH="/home/irrigation/.local/bin:$PATH"
ENV ENVIRONMENT=production

# Exposition port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Point d'entr√©e
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]

# =============================================================================
# üë©‚Äçüíª ALTERNATIVE D√âVELOPPEMENT
# =============================================================================
FROM application as development

# Mode d√©veloppement
USER root
RUN pip install --no-cache-dir debugpy pytest-xdist
USER irrigation

# Variables dev
ENV ENVIRONMENT=development
ENV DEBUG=true

# Commande d√©veloppement avec hot reload
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "/app"]

# =============================================================================
# üîÑ VOLUME MOUNTS POUR D√âVELOPPEMENT
# =============================================================================
# docker run -v $(pwd):/app -p 8000:8000 backend:dev